@using Sitecore.Mvc
@using Sitecore.Mvc.Presentation
@using Sitecore.Web.UI.Controls.Common.UserControls
@using RogueCoders.Foundation.SitecoreExtensions.TopDownloaded
@model RenderingModel
@{
    var rendering = Html.Sitecore().Controls().GetTopDownloaded(Model.Rendering);

    var htmlAttributes = rendering.HtmlAttributes;
}
<div @htmlAttributes>
    <h2 data-bind="text:moduleheading" class="module-heading"></h2>
    <ul class="top-downloaded-list"></ul>
</div>
